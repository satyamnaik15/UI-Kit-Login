<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/bg_back"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">
    <View
            android:id="@+id/viewColor"
            android:layout_width="match_parent"
          android:background="@color/colorPrimary"
          android:layout_height="0dp"
            android:visibility="invisible"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="@+id/view"/>


    <View
            android:layout_width="5dp"
            android:layout_height="1dp"
            android:background="#d2d2d2"
            android:id="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/btnClick"
            app:layout_constraintTop_toTopOf="@+id/btnClick" app:layout_constraintEnd_toEndOf="@+id/btnClick"
            app:layout_constraintStart_toStartOf="@+id/btnClick"/>


    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:transitionName="demo"
            android:src="@drawable/ic_home"
            android:id="@+id/btnClick"
            app:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.39"/>


</android.support.constraint.ConstraintLayout>